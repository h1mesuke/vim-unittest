NAME=vunit
USAGE="$NAME [options] TESTCASE.vim"
VERSION=0.1.0

print_help() {
  cat 1>&2 << EOF

  $NAME - Run a testcase of unittest.vim

  Usage:
    $USAGE

  Options:
    -V {Vim_command}  Executes tests with {Vim_command}.

    -c {color_set}    Change the color set used for colorizing the results.

                      Available color sets:
                        n[one]    Disable colorzing.
                        d[ark]    Use dark  colors.   [Default]
                        l[ight]   Use light colors.

    -b                Output the results using Vim's buffer.

    -h                Print this help.

    -v                Print the version of this program.
EOF
}

print_usage() {
  echo "Usage: $USAGE" 1>&2
}

print_version() {
  echo "$NAME $VERSION" 1>&2
}

VIM=vim
OUTPUT=FILE   # FILE | BUFFER
COLOR=DARK    # NONE | DARK | LIGHT

OPT=

# Parse command-line options.
if [ "$OPTIND" = 1 ]; then
  while getopts V:c:bhv OPT; do
    case $OPT in
      V)
        VIM=$OPTARG
        ;;
      c)
        case "$OPTARG" in
          [nN]*)
            COLOR=NONE
            ;;
          [dD]*)
            COLOR=DARK
            ;;
          [lL]*)
            COLOR=LIGHT
            ;;
        esac
        ;;
      b)
        OUTPUT=BUFFER
        ;;
      h | \?)
        print_help
        status=0
        if [ $OPT != "h" ]; then
          status=1
        fi
        exit $status
        ;;
      v)
        print_version
        exit 0
        ;;
    esac
  done
  shift `expr $OPTIND - 1`
else
  echo "$NAME: getopts is not available." 1>&2
  exit 1
fi

if [ $# -ne 1 ]; then
  print_usage
  exit 1
fi

tcfile=$1

if [ $OUTPUT = "FILE" ]; then
  outfile=`mktemp -t vunit_results.XXXXXXXXXX`
  trap "rm -f '$outfile'" 0
  trap "rm -f '$outfile'; exit 1" 1 2 3 15

  $VIM -c "UnitTest $tcfile >$outfile" -c "qall!"
  if [ $COLOR = "NONE" ]; then
    cat $outfile
  else
    cat $outfile | awk -v color_set=$COLOR '

      BEGIN {
        if (color_set == "DARK") {
          red="\x1b[31m"; green="\x1b[32m"
        } else {
          red="\x1b[31;01m"; green="\x1b[32;01m"
        }
        endcolor="\x1b[0m"
      }

      # Status Line
      /^[[:alpha:]_][[:alnum:]_]* => \.*[FE][.FE]*$/ {
        $1 = red $1 endcolor
        gsub(/[FE]/, red "&" endcolor, $3)
      }

      # Failure/Error Reason
      /^[[:space:]]+(Failed|Error): / {
        $0 = red $0 endcolor
      }

      # Results
      /^[01-9]+ tests, [01-9]+ assertions, [01-9]+ failures, [01-9]+ errors$/ {
        sub(/0 failures, 0 errors/,           green "&" endcolor)
        sub(/[1-9][01-9]* (failures|errors)/, red "&" endcolor)
      }

      { print $0 }
    '
  fi
else
  $VIM -c "UnitTest $tcfile"
fi

# vim: filetype=sh
